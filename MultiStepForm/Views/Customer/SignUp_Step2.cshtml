@model MultiStepForm.Web.ViewModels.Customer.PlanSelectViewModel


<body>
    <main>
        <section class="d-flex justify-content-evenly align-items-center flex-row">
            <div class="image-container">
                <picture>
                    <img src="~/images/bg-sidebar-desktop.svg" />
                </picture>
            </div>
            <div class="nav-container">
                <div class="d-flex flex-row gap-3">
                    <div class="rounded-circle selected">
                        1
                    </div>
                    <div class="nav-text">
                        <p>Step 1</p>
                        <h5>Your Info</h5>
                    </div>
                </div>
                <div class="d-flex flex-row gap-3">
                    <div class="rounded-circle not-selected">
                        2
                    </div>
                    <div class="nav-text">
                    <h5>Select Plan</h5>
                    </div>
                <div class="d-flex flex-row gap-3">
                    <div class="rounded-circle not-selected">
                        3
                    </div>
                    <div class="nav-text">
                        <p>Step 3</p>
                        <h5>Add-Ons</h5>
                    </div>
                </div>

                <div class="d-flex flex-row gap-3">
                    <div class="rounded-circle not-selected">
                        4
                    </div>
                    <div class="nav-text">
                        <p>Step 4</p>
                        <h5>Summary</h5>
                    </div>
                </div>
            </div>
            <div class="form-container">
                <form asp-action="SignUp_Step2" asp-controller="Customer" class="d-flex flex-column gap-3"
                    method="POST">    <div>
                     @foreach (var plan in Model.Plans!) 
                     {
                        var id = $"{plan}";
                        <input type="radio"
                        id="@id"
                        name="SelectedPlan"
                        value="@plan"
                        @(Model.SelectedPlan == plan ? "checked" : "")/>
                        <label asp-for="@id">@plan</label>
                     }
                     
                    <input type="submit" class="btn step1-btn" value="Next" />
                </form>
            </div>
        </section>
    </main>
</body>