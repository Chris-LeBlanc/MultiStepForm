@model MultiStepForm.Web.ViewModels.Customer.PersonalInfoViewModel

@{
    ViewData["Title"] = "Personal Information";
}

<body>
    <main>
        <section class="d-flex justify-content-evenly align-items-center flex-row">
            <div class="image-container">
                <picture>
                    <img src="~/images/bg-sidebar-desktop.svg" />
                </picture>
            </div>
            <div class="nav-container">
                <div class="d-flex flex-row gap-3">
                    <div class="rounded-circle selected">
                        1
                    </div>
                    <div class="nav-text">
                        <p>Step 1</p>
                        <h5>Your Info</h5>
                    </div>
                </div>
                <div class="d-flex flex-row gap-3">
                    <div class="rounded-circle not-selected">
                        2
                    </div>
                    <div class="nav-text">
                        <p>Step 2</p>
                        <h5>Select Plan</h5>
                    </div>
                </div>

                <div class="d-flex flex-row gap-3">
                    <div class="rounded-circle not-selected">
                        3
                    </div>
                    <div class="nav-text">
                        <p>Step 3</p>
                        <h5>Add-Ons</h5>
                    </div>
                </div>

                <div class="d-flex flex-row gap-3">
                    <div class="rounded-circle not-selected">
                        4
                    </div>
                    <div class="nav-text">
                        <p>Step 4</p>
                        <h5>Summary</h5>
                    </div>
                </div>
            </div>
            <div class="form-container">
                <h1>Personal info</h1>
                <p>Please provide your name, email address, and phone number</p>
                <form asp-action="SignUp_Step1" asp-controller="Customer" class="d-flex flex-column gap-3"
                    method="POST">
                    @* <input type="hidden" asp-for="Id"/> *@
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <div>
                        <label asp-for="Name"></label>
                        <input placeholder="e.g. Stephen King" id="Name" asp-for="Name" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div>
                        <label asp-for="Email"></label>
                        <input placeholder="e.g. stephenking@larum.com" id="Email" asp-for="Email"/>
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    <div>
                        <label asp-for="PhoneNumber"></label>
                        <input placeholder="(NNN) NNN-NNNN" id="PhoneNumber" asp-for="PhoneNumber"/>
                    </div>
                    <input type="submit" class="btn step1-btn" value="Next" />
                </form>
            </div>
        </section>
    </main>
</body>
